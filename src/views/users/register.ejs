<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs') %>
</head>
<body>
    <header class="header-login">  
        <%- include('../partials/header.ejs') %>

        <%- include('../partials/nav-bar.ejs') %>
    </header>  
    <!--Formulario de registro-->
    <form action="/" method="GET" class="formulario" enctype="multipart/form-data">
            <div class="nombre-apellido">
                <input type="text" name="nombre" placeholder="Nombre y apellido" class="nombre-r" required minlength="8"  >
            </div>
            <div class="nombre-usuario">
                <input type="text" name="usuario" placeholder="Nombre de usuario" class="usuario-r" required minlength="4">
            </div>
            <div class="e-mail">
                <input type="text" name="email" placeholder="E-mail" class="email-r" required>
            </div>
            <div class="fecha-div">
                <div class="label">
                    <label class="label-form-r">Fecha de nacimiento</label>
                </div>
                <input type="date" name="fecha" placeholder="Fecha de nacimiento" class="fecha-r">
            </div>
            <div class="domicilio-div">
                <input type="text" name="domicilio" placeholder="Domicilio" class="domicilio-r">
            </div>
            <div class="contraseña">
                <div class="label-contraseña"><label class="label-form">Contraseña</label></div>
                <div class="contenedor-contraseña">
                    <input type="password" name="password" placeholder="Contraseña nueva" class= "password-r" required minlength="8">
                    <input type="password" name="password" placeholder=" Confirmar contraseña" class= "password-r" required minlength="8">
                </div> 
            </div>
            <div class="contenedor-button">
                <div class="contenedor-button-uno">
                    <button type="submit" class="button-enviar">Enviar</button>
                </div>
                <div class="contenedor-button-dos">
                    <button type="reset" class="button-borrar">Borrar</button>
                </div> 
                    
                
            </div>
    </form>
    <footer class="footer-login">
        <%- include('../partials/footer.ejs') %>
    </footer> 
</html>
