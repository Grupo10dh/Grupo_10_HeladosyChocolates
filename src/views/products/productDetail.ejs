<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs') %>
</head>
<body>
    <header>
        <%- include('../partials/header.ejs') %>
        <%- include('../partials/nav-bar.ejs') %>
    </header>
    
    <div class="container">
        <div class="tarjeta">
            <div class="imagen">
                <% if(!product.imagen){%>
                    <img src="/img/popu-7.jpg" alt="Foto default" >
                <%}else{%>
                    <img src="/img/product/<%= product.imagen%>" alt="Foto producto" > 
                <%}%>
            </div>
            <div class="info">
                <h2 class="titulo-detalle"><%= product.nombre%></h2>
                <div class="califi"></div>
                <div class="precio">
                    <h3>$<%= product.precio_unidad%></h3>
                </div>
                <div class="descrip">
                    <h4><%= product.descripcion%></h4>
                </div>

                <div class="boton">
                    <form action="/products/agregar" method="POST">
                            <input type="text" class="input-hidden" name="idProducto" value= "<%= product.id_producto%>">
                            <input type="number" class="input-detalle-cantidad" name="cantidadDetalle" value="0" min="0">
                            <button type="submit" name="">AÃ±adir al carrito</button>
                    </form>
                    
                </div>
                <div class="boton-volver">
                    <button type="submit" name="">Volver a la lista</button>
                </div>


            </div>
        </div>
    </div>
    
    <footer>
        <%- include('../partials/footer.ejs') %>
    </footer>


</body>
</html>